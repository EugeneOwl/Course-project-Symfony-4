{% extends 'base.html.twig' %}

{% block body %}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}
        {{ parent() }}
        <link href="{{ asset('css/question.css') }}" rel="stylesheet" />
    {% endblock %}
    <title>{% block title %}Question {{ currentQuestionNumber }}{% endblock %}</title>
</head>
<body>
    <h2 class="quizName">Quiz '{{ quiz.quizname }}'</h2>

    <form id='questionList' action="{{ nextQuestionLink }}">
        <div class="wrapper container">
            <div class="form-signin">
                <h2 class="form-signin-heading">{{ currentQuestionNumber }}
                {{ ")" }}
                {% for question in quiz.questionList %}
                    {% if loop.index == currentQuestionNumber %}
                        {{ question.getText }}
                    {% endif %}
                {% endfor %}</h2>
                <ul>
                {% for question in quiz.questionList %}
                    {% if loop.index == currentQuestionNumber %}
                        {% for answer in question.answerList %}
                            <li>
                                <input id="{{ loop.index }}" type="radio" name="select" class="radioButtons" value="{{ answer.getText }}" data-is-true="{{ answer.isTrue }}">
                                <label for="{{ loop.index }}">{{ answer.getText }}</label>
                                <div class="check"></div>
                            </li>
                        {% endfor %}
                    {% endif %}
                {% endfor %}
                </ul>
                <br>
                <input type='submit' form='questionList' value="button next" class="btn btn-lg btn-primary btn-block" disabled>
            </div>
        </div>
    </form>
</body>
</html>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/question.js') }}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/ajax.js') }}"></script>
{% endblock %}